<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="billViewModel"
            type="com.easybill.viewmodel.EasyBillViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">


        <TextView
            android:id="@+id/filter_title"
            android:layout_width="140dp"
            android:layout_height="43dp"
            android:text="@string/archive_title"
            android:textColor="@color/colorFontWhite"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/archiveRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/archiveRecyclerView"
            android:layout_width="413dp"
            android:layout_height="412dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.497" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_add"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true"
            app:backgroundTint="@color/colorBackgroundFloatingButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/ic_add" />

        <LinearLayout
            android:id="@+id/buttons_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/buttons_background"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                app:backgroundTint="@color/colorBackgroundFloatingButton"
                app:srcCompat="@drawable/ic_filter" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_sort_by_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                app:backgroundTint="@color/colorBackgroundFloatingButton"
                app:srcCompat="@drawable/ic_calendar" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_sort_by_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                app:backgroundTint="@color/colorBackgroundFloatingButton"
                app:srcCompat="@drawable/ic_money" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="60dp"
                app:backgroundTint="@color/colorBackgroundFloatingButton"
                app:srcCompat="@drawable/ic_statistic" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:backgroundTint="@color/colorBackgroundFloatingButton"
            app:srcCompat="@drawable/ic_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>