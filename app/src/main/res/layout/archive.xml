<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="billViewModel"
            type="com.easybill.viewmodel.EasyBillViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/archiveRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_add"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:clickable="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            app:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_add" />

        <LinearLayout
            android:id="@+id/buttons_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:background="@drawable/shape_archive_menu_background"
            android:padding="3dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_filter" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_sort_by_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_calendar" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_sort_by_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_money" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginBottom="60dp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_statistic" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="30dp"
            app:backgroundTint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>