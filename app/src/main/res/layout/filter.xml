<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/filter_title"
            android:layout_width="111dp"
            android:layout_height="45dp"
            android:text="@string/filter_title"
            android:textColor="@color/colorFontWhite"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView_filter_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/seekBar_price"
            android:layout_width="263dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_time_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.635" />

        <SeekBar
            android:id="@+id/seekBar_time_from"
            android:layout_width="263dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_year_to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/seekBar_time_to"
            android:layout_width="263dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_year_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_time_from" />

        <SeekBar
            android:id="@+id/seekBar_year_from"
            android:layout_width="263dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toTopOf="@+id/checkBox_traffic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_time_from" />

        <SeekBar
            android:id="@+id/seekBar_year_to"
            android:layout_width="263dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.629" />

        <CheckBox
            android:id="@+id/checkBox_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category_food"
            app:layout_constraintBottom_toTopOf="@+id/checkBox_sport"
            app:layout_constraintEnd_toStartOf="@+id/checkBox_traffic"
            app:layout_constraintHorizontal_bias="0.398"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_fashion"
            app:layout_constraintVertical_bias="0.0" />

        <CheckBox
            android:id="@+id/checkBox_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/filter_category_sport"
            app:layout_constraintBottom_toTopOf="@+id/checkBox_health"
            app:layout_constraintEnd_toStartOf="@+id/checkBox_living"
            app:layout_constraintHorizontal_bias="0.415"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_fashion"
            app:layout_constraintVertical_bias="0.0" />

        <CheckBox
            android:id="@+id/checkBox_living"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category_living"
            app:layout_constraintBottom_toTopOf="@+id/checkBox_other"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toEndOf="@+id/checkBox_health"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_electronics" />

        <CheckBox
            android:id="@+id/checkBox_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category_health"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkBox_other"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_fashion"
            app:layout_constraintVertical_bias="0.407" />

        <CheckBox
            android:id="@+id/checkBox_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category_traffic"
            app:layout_constraintBottom_toTopOf="@+id/checkBox_electronics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.557"
            app:layout_constraintStart_toEndOf="@+id/textView_filter_category"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_year_to"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_other" />

        <CheckBox
            android:id="@+id/checkBox_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category_other"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toEndOf="@+id/checkBox_food"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_electronics"
            app:layout_constraintVertical_bias="0.256" />

        <CheckBox
            android:id="@+id/checkBox_fashion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category_fashion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkBox_traffic"
            app:layout_constraintHorizontal_bias="0.456"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_year_to"
            app:layout_constraintVertical_bias="0.152" />

        <CheckBox
            android:id="@+id/checkBox_electronics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category_electronics"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintStart_toEndOf="@+id/checkBox_food"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_year_to"
            app:layout_constraintVertical_bias="0.295" />

        <TextView
            android:id="@+id/textView_filter_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_price"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_filter_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category"
            app:layout_constraintBottom_toTopOf="@+id/checkBox_fashion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_year_to"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_filter_time_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_time_from"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_time_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_price"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_filter_time_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_time_to"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_time_to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_time_from"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_filter_year_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_year_from"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_year_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_time_to"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_filter_year_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_year_to"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_year_to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_year_from"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>